<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8facd"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="@+id/footer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/geulogo"
                android:layout_width="249dp"
                android:layout_height="258dp"
                android:layout_gravity="center_horizontal"

                android:layout_marginTop="40dp"
                android:contentDescription="@string/app_name"
                app:srcCompat="@drawable/geulogo" />

            <TextView
                android:id="@+id/login_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="70dp"
                android:fontFamily="@font/open_sans"
                android:text="@string/login_page"
                android:textColor="@color/black"
                android:textSize="32sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/studentLoginBtn"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="60dp"
                android:layout_marginTop="51dp"
                android:backgroundTint="@color/blue"
                android:fontFamily="@font/open_sans"
                android:text="@string/studentlogin"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:cornerRadius="60dp"
                tools:ignore="DuplicateSpeakableTextCheck,TextContrastCheck" />

            <Button
                android:id="@+id/teacherLoginBtn"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="60dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="40dp"
                android:backgroundTint="@color/blue"
                android:fontFamily="@font/open_sans"
                android:text="@string/teacherlogin"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:cornerRadius="60dp"
                tools:ignore="TextContrastCheck" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/open_sans"
        android:text="@string/footer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_marginBottom="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>